# Template file for 'shiromino'
pkgname=shiromino
version=0.beta3.pre2
revision=1
_tag="v.beta3-pre2"
wrksrc="${pkgname}-${_tag}"
build_style=gnu-makefile
hostmakedepends="pkg-config"
makedepends="SDL2-devel SDL2_image-devel SDL2_mixer-devel"
short_desc="Diverse and challenging puzzle/action game"
maintainer="Franc[e]sco <lolisamurai@tfwno.gf>"
license="MIT"
homepage="https://github.com/FelicityVi/shiromino"
distfiles="https://github.com/FelicityVi/${pkgname}/archive/${_tag}/${wrksrc}.tar.gz"
checksum=4dc2d07663b6d9833ee77ea6519a661a85a530d36f4e9f543a784b6e9424009d

do_install() {
	vmkdir usr/share/${pkgname}
	vmkdir usr/share/doc/${pkgname}
	vbin bin/game ${pkgname}-game
	echo "HOME_PATH /usr/share/${pkgname}" >> game.cfg
	for f in audio gfx game.cfg; do
		vcopy $f usr/share/${pkgname}/
	done
	vcopy docs usr/share/doc/${pkgname}
	cat > ${pkgname} << EOF
#!/bin/sh
${pkgname}-game /usr/share/${pkgname}/game.cfg
EOF
	vbin ${pkgname}
	vlicense LICENSE
}
